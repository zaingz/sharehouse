  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="shadowme ">
              <h4 class="text-center nav nav-pills nav-pills-success">LOG IN</h4>
              <div class="row">
                <div class="col-lg-12">
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name),:html => {:id => "login-form"},  :style=>"display: block;") do |f| %>

                  <div class="form-group label-floating">
                    <%= label(:email, "Email" , :class => "control-label") %>
                    <%= f.email_field :email ,:class=>"form-control",autofocus: true %>
                  </div>
                  <div class="form-group label-floating">
                    <%= label(:password, "Password" , :class => "control-label") %>
                    <%= f.password_field :password,:class=>"form-control", autocomplete: "off" %>
                  </div>
                  <% if devise_mapping.rememberable? -%>
                  <div class="checkbox">
                    <label>
                      <%= f.check_box :remember_me ,:class=>"checkbox" %>
                      Remember me
                    </label>
                  </div>
                  <% end -%>
                  <div class="form-group">
                    <div class="row">
                      <div class="text-center" style="margin: 0px;">
                        <%= f.submit "Log in",:class=>"btn btn-raised btn-success full-width-button" %>
                      </div>
                    </div>
                  </div>
                  <div class="form-group" style="padding-top: 0px;margin: 0px;">
                    <div class="row">
                      <div class="col-lg-12">
                        <div class="text-center">
                          <%= render "devise/shared/links" %>
                        </div>
                        
                      </div>
                    </div>
                  </div>
                <% end %>
                </div>
              </div>
        </div>
      </div>
    </div>
  </div>